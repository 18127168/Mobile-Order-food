<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#fff"
    android:layout_width="match_parent"
    android:weightSum="9"
    android:paddingTop="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Thông tin chi tiết"
        >
    </TextView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:padding="10sp"
            android:orientation="vertical"
            >
            <EditText
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:background="@drawable/button"
                android:gravity="center_vertical|center_horizontal"
                android:layout_height="60dp"
                android:id="@+id/flag_name"
                android:hint="FlagName"
                >
            </EditText>
            <EditText
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:background="@drawable/button"
                android:layout_height="60dp"
                android:id="@+id/ID_nguyen_lieu"
                android:gravity="center_vertical|center_horizontal"
                android:hint="ID nguyên liệu"
                >
            </EditText>
            <EditText
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/tenmon"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/button"
                android:hint="Tên Món"
                >
            </EditText>

            <EditText
                android:id="@+id/time_to_finish"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button"
                android:gravity="center_vertical|center_horizontal"
                android:hint="Time to finish"></EditText>

            <EditText
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/giatien"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/button"
                android:hint="giá tiền"
                >
            </EditText>
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/sl_nguyen_lieu"
                android:hint="số lượng nguyên liệu"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/button"
                >
            </EditText>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <Button

            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/btnd"
            android:layout_marginLeft="20dp"
            android:text="Đồng ý"
            >
        </Button>

        <Button
            android:id="@+id/btnh"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:text="Hủy"></Button>

    </LinearLayout>
</LinearLayout>