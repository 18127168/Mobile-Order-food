<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#fff"
    android:layout_width="match_parent"
    android:weightSum="10"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:gravity="center"
            android:paddingLeft="20sp"
            android:textColor="@color/my_blue"
            android:paddingTop="10sp"
            android:paddingRight="20sp"
            android:paddingBottom="10sp"
            android:text="Thêm Món Ăn"
            android:layout_weight="2"
            ></TextView>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:padding="10sp"
            android:orientation="vertical"
            >
            <EditText
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical|center_horizontal"
                android:id="@+id/food_name"
                android:background="@drawable/button"
                android:hint="Tên "

                >
            </EditText>
            <EditText
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/ingredient_food"
                android:inputType="text"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/button"
                android:hint="ID Nguyên Liệu"
                >
            </EditText>
            <EditText
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:background="@drawable/button"
                android:layout_width="match_parent"
                android:inputType="number"
                android:layout_height="60dp"
                android:gravity="center_vertical|center_horizontal"
                android:id="@+id/food_time"
                android:hint="Thời Gian Hoàn Thành"
                >
            </EditText>
            <EditText
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:background="@drawable/button"
                android:layout_width="match_parent"
                android:inputType="number"
                android:layout_height="60dp"
                android:gravity="center_vertical|center_horizontal"
                android:id="@+id/food_price"
                android:hint="Giá Tiền"
                >
            </EditText>
            <EditText
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:background="@drawable/button"
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_height="60dp"
                android:gravity="center_vertical|center_horizontal"
                android:id="@+id/food_des"
                android:hint="Mô tả"
                >
            </EditText>
            <EditText
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:background="@drawable/button"
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_height="60dp"
                android:gravity="center_vertical|center_horizontal"
                android:id="@+id/food_number"
                android:hint="Số Lượng nguyên liệu"
                >
            </EditText>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="choose image"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:id="@+id/choose_image_btn_food"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:id="@+id/image_add_food"
                />

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <Button

            android:textColor="@color/black"
            android:id="@+id/btnd"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="0sp"
            android:layout_marginLeft="0sp"
            android:text="Đồng ý"></Button>

        <Button
            android:textColor="@color/black"
            android:id="@+id/btnh"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="50sp"
            android:layout_marginLeft="50sp"
            android:text="Hủy"></Button>

    </LinearLayout>
</LinearLayout>